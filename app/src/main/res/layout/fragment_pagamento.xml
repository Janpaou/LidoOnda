<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PagamentoFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="250dp">

    <ImageView
        android:id="@+id/immaginePagamento"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintEnd_toStartOf="@+id/numeroPagamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/numeroPagamento"
        android:src="@drawable/baseline_payment_24"
        app:layout_constraintBottom_toBottomOf="@id/numeroPagamento"
        ></ImageView>

    <EditText
        android:id="@+id/numeroPagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0000 0000 0000 0000"
        android:inputType="numberDecimal"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/immaginePagamento"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLength="19"/>

    <ImageView
        android:id="@+id/immagineCalendario"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_calendar_month_24"
        app:layout_constraintBottom_toBottomOf="@+id/pickDate"
        app:layout_constraintEnd_toStartOf="@+id/pickDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numeroPagamento"></ImageView>

    <EditText
        android:id="@+id/pickDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="mm/aa"
        android:inputType="date"
        android:maxLength="5"
        android:minHeight="48dp"
        app:layout_constraintEnd_toStartOf="@+id/cvvpick"
        app:layout_constraintStart_toEndOf="@+id/immagineCalendario"
        app:layout_constraintTop_toBottomOf="@id/numeroPagamento" />

    <EditText
        android:id="@+id/cvvpick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="000"
        android:inputType="number"
        android:maxLength="3"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toStartOf="@id/immaginebanca"
        app:layout_constraintStart_toEndOf="@+id/pickDate"
        app:layout_constraintTop_toBottomOf="@+id/numeroPagamento" />

    <ImageView
        android:id="@+id/immaginebanca"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_account_balance_24"
        app:layout_constraintBottom_toBottomOf="@+id/cvvpick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cvvpick"
        app:layout_constraintTop_toBottomOf="@+id/numeroPagamento"></ImageView>
    <Button
        android:id="@+id/inserisciButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiungi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="inserisciPagamento"></Button>
    <Button
        android:id="@+id/modificaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="modificaPagamento"
        android:visibility="invisible"></Button>

    <Button
        android:id="@+id/rimuoviButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_error"
        android:onClick="rimuoviPagamento"
        android:text="Elimina"
        android:visibility="invisible"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inserisciButton"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>